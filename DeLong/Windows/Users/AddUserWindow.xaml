<Window x:Class="DeLong.Windows.Users.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add User" Height="800" Width="800">
    <Grid Background="#493628">
        <StackPanel Margin="20" VerticalAlignment="Top">
            <TextBlock Text="FIO" Foreground="#E4E0E1" Margin="0,0,0,5"/>
            <TextBox x:Name="txtFIO" Background="#AB886D" Foreground="#E4E0E1"/>

            <TextBlock Text="Telefon" Foreground="#E4E0E1" Margin="0,20,0,5"/>
            <TextBox x:Name="txtTelefon" Background="#AB886D" Foreground="#E4E0E1"/>

            <TextBlock Text="Adres" Foreground="#E4E0E1" Margin="0,20,0,5"/>
            <TextBox x:Name="txtAdres" Background="#AB886D" Foreground="#E4E0E1"/>

            <TextBlock Text="Telegram Raqam" Foreground="#E4E0E1" Margin="0,20,0,5"/>
            <TextBox x:Name="txtTelegramRaqam" Background="#AB886D" Foreground="#E4E0E1"/>

            <TextBlock Text="INN" Foreground="#E4E0E1" Margin="0,20,0,5"/>
            <TextBox x:Name="txtINN" Background="#AB886D" Foreground="#E4E0E1"/>

            <TextBlock Text="OKONX" Foreground="#E4E0E1" Margin="0,20,0,5"/>
            <TextBox x:Name="txtOKONX" Background="#AB886D" Foreground="#E4E0E1"/>

            <TextBlock Text="Xisob Raqam" Foreground="#E4E0E1" Margin="0,20,0,5"/>
            <TextBox x:Name="txtXisobRaqam" Background="#AB886D" Foreground="#E4E0E1"/>

            <TextBlock Text="JSHSHIR" Foreground="#E4E0E1" Margin="0,20,0,5"/>
            <TextBox x:Name="txtJSHSHIR" Background="#AB886D" Foreground="#E4E0E1"/>

            <TextBlock Text="Bank" Foreground="#E4E0E1" Margin="0,20,0,5"/>
            <TextBox x:Name="txtBank" Background="#AB886D" Foreground="#E4E0E1"/>

            <TextBlock Text="Firma Adres" Foreground="#E4E0E1" Margin="0,20,0,5"/>
            <TextBox x:Name="txtFirmaAdres" Background="#AB886D" Foreground="#E4E0E1"/>

            <Button Content="Add User" Click="AddUserButton_Click" Background="#EC8305" Foreground="#DBD3D3" Height="30" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
