<Window x:Class="DeLong.Windows.Users.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add User" Height="450" Width="800">
    <Grid Background="#2E073F">
        <StackPanel Margin="20">
            <TextBlock Text="FIO" Foreground="#EBD3F8" Margin="0,0,0,5"/>
            <Grid>
                <TextBox x:Name="txtFIO" Margin="0,0,0,0" Background="#7A1CAC" Foreground="#EBD3F8"/>
                <TextBlock Text="FIO" Foreground="#AFAFAF" VerticalAlignment="Center" Margin="5,0,0,0" IsHitTestVisible="False"/>
            </Grid>

            <TextBlock Text="Telefon" Foreground="#EBD3F8" Margin="0,0,0,5"/>
            <Grid>
                <TextBox x:Name="txtTelefon" Margin="0,0,0,0" Background="#7A1CAC" Foreground="#EBD3F8"/>
                <TextBlock Text="Telefon" Foreground="#AFAFAF" VerticalAlignment="Center" Margin="5,0,0,0" IsHitTestVisible="False"/>
            </Grid>

            <TextBlock Text="Adres" Foreground="#EBD3F8" Margin="0,0,0,5"/>
            <Grid>
                <TextBox x:Name="txtAdres" Margin="0,0,0,0" Background="#7A1CAC" Foreground="#EBD3F8"/>
                <TextBlock Text="Adres" Foreground="#AFAFAF" VerticalAlignment="Center" Margin="5,0,0,0" IsHitTestVisible="False"/>
            </Grid>

            <TextBlock Text="Telegram Raqam" Foreground="#EBD3F8" Margin="0,0,0,5"/>
            <Grid>
                <TextBox x:Name="txtTelegramRaqam" Margin="0,0,0,0" Background="#7A1CAC" Foreground="#EBD3F8"/>
                <TextBlock Text="Telegram Raqam" Foreground="#AFAFAF" VerticalAlignment="Center" Margin="5,0,0,0" IsHitTestVisible="False"/>
            </Grid>

            <TextBlock Text="INN" Foreground="#EBD3F8" Margin="0,0,0,5"/>
            <Grid>
                <TextBox x:Name="txtINN" Margin="0,0,0,0" Background="#7A1CAC" Foreground="#EBD3F8"/>
                <TextBlock Text="INN" Foreground="#AFAFAF" VerticalAlignment="Center" Margin="5,0,0,0" IsHitTestVisible="False"/>
            </Grid>

            <Button Content="Add User" Click="AddUserButton_Click" Background="#7A1CAC" Foreground="#EBD3F8" Height="30" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
