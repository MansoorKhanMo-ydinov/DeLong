<Window x:Class="DeLong.Windows.Kirims.AddKirimWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Kirim" Height="600" Width="800" Background="#334257">
    <Grid Margin="10">
        <!-- Asosiy Kirim ma'lumotlari -->
        <StackPanel VerticalAlignment="Top" Margin="0,0,0,20">
            <TextBlock Text="Sana" Foreground="#EEEEEE" Margin="0,10,0,5"/>
            <DatePicker x:Name="dpSana" Background="#476072" Foreground="#EEEEEE"/>

            <TextBlock Text="Ombor Nomi" Foreground="#EEEEEE" Margin="0,10,0,5"/>
            <ComboBox x:Name="cmbOmborNomi" Background="#476072" Foreground="#EEEEEE"/>

            <TextBlock Text="Yetkazuvchi" Foreground="#EEEEEE" Margin="0,10,0,5"/>
            <TextBox x:Name="txtYetkazuvchi" Background="#476072" Foreground="#EEEEEE"/>

            <TextBlock Text="Eslatma" Foreground="#EEEEEE" Margin="0,10,0,5"/>
            <TextBox x:Name="txtEslatma" Background="#476072" Foreground="#EEEEEE"/>

            <TextBlock Text="Role" Foreground="#EEEEEE" Margin="0,10,0,5"/>
            <ComboBox x:Name="cmbRole" Background="#476072" Foreground="#EEEEEE"/>
        </StackPanel>

        <!-- Inform Jadvali -->
        <Expander Header="Inform" Foreground="#EEEEEE" Margin="0,20,0,0" Background="#476072">
            <Grid>
                <DataGrid x:Name="InformTable" AutoGenerateColumns="False" CanUserAddRows="True" Margin="0,10,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="T/R" Binding="{Binding TR}" Width="50"/>
                        <DataGridTextColumn Header="Tovar Nomi" Binding="{Binding TovarNomi}" Width="150"/>
                        <DataGridTextColumn Header="Soni" Binding="{Binding Soni}" Width="100"/>
                        <DataGridTextColumn Header="Sotib olish summasi" Binding="{Binding SotibOlishSummasi}" Width="150"/>
                        <DataGridTextColumn Header="Kirim summasi" Binding="{Binding KirimSummasi}" Width="150"/>
                        <DataGridTextColumn Header="%" Binding="{Binding Foiz}" Width="50"/>
                        <DataGridTextColumn Header="Sotish Narxi" Binding="{Binding SotishNarxi}" Width="150"/>
                        <DataGridTextColumn Header="Sotish Summasi" Binding="{Binding SotishSummasi}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button Content="Add Row" Background="#548CA8" Foreground="#EEEEEE" Margin="0,20,0,0"/>
            </Grid>
        </Expander>

        <!-- Add Tugmasi -->
        <Button Content="Add Kirim" Background="#548CA8" Foreground="#EEEEEE" Width="100" Height="40" HorizontalAlignment="Right" Margin="0,20,0,0"/>
    </Grid>
</Window>
